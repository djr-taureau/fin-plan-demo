{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ms:debug",
			"identifier": "runFunctionsHost",
			"command": "func host start",
			"options": {
				"env": {
					"languageWorkers:node:arguments": "--inspect=5858"
				},
				"cwd": "${workspaceFolder}/dist/microservices/functions"
			},
			"dependsOn": [
				"npm: ms:build"
			],
			"isBackground": true,
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false
			}
		},
		{
			"type": "npm",
			"script": "ms:build",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": true,
				"panel": "dedicated",
			}
		}
	]
}
